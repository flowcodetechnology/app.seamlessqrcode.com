Options -Indexes

# Authorization header pass-through
SetEnvIf Authorization "(.*)" HTTP_AUTHORIZATION=$1

RewriteEngine On

# Allow short links and friendly URLs to be processed by index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php?altum=$1 [L,QSA]

# Long-term caching for static assets
<IfModule mod_expires.c>
    <filesMatch "\.(gif|ico|jpg|jpeg|png|svg|webp)$">
        Header set Cache-Control "max-age=31536000, public"
    </filesMatch>
    <filesMatch "\.(js|css)$">
        Header set Cache-Control "max-age=31536000, public"
    </filesMatch>
</IfModule>

# Brotli compression
<IfModule mod_brotli.c>
    SetOutputFilter BROTLI_COMPRESS
    SetEnvIfNoCase Request_URI \.(?:gif|jpe?g|png)$ no-brotli
    AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/x-javascript application/javascript application/json application/x-font-ttf application/vnd.ms-fontobject image/x-icon
</IfModule>

# CORS headers for JSON files
<IfModule mod_headers.c>
    <FilesMatch "\.json$">
        Header set Access-Control-Allow-Origin "https://app.seamlessqrcode.com"
        Header set Access-Control-Allow-Methods "GET"
        Header set Access-Control-Allow-Headers "Content-Type"
    </FilesMatch>
</IfModule>

# Service worker scope
<IfModule mod_headers.c>
    <Files ~ "sw\.js">
        Header set Service-Worker-Allowed: /
    </Files>
</IfModule>

# PHP Configuration for ea-php81 (single source of truth)
<IfModule php8_module>
   php_flag display_errors On
   php_value max_execution_time 30
   php_value max_input_time 60
   php_value max_input_vars 10000
   php_value memory_limit 900M
   php_value post_max_size 1024M
   php_value session.gc_maxlifetime 1440
   php_value session.save_path "/var/cpanel/php/sessions/ea-php81"
   php_value upload_max_filesize 800M
   php_flag zlib.output_compression On
</IfModule>

<IfModule lsapi_module>
   php_flag display_errors On
   php_value max_execution_time 30
   php_value max_input_time 60
   php_value max_input_vars 10000
   php_value memory_limit 900M
   php_value post_max_size 1024M
   php_value session.gc_maxlifetime 1440
   php_value session.save_path "/var/cpanel/php/sessions/ea-php81"
   php_value upload_max_filesize 800M
   php_flag zlib.output_compression On
</IfModule>

# Set the “ea-php81” package as the default PHP version
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php81 .php .php8 .phtml
</IfModule>

